{
	"include": ["src/**/*.ts"],
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "commonjs",
		"target": "ES2022",
		"removeComments": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"incremental": true,
		"strict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictPropertyInitialization": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true,
		"pretty": true,
		"useUnknownInCatchVariables": true,
		"outDir": "dist"
	}
}
